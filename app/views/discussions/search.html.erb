<%
  @page_title = "Title Search"
  add_body_class "search", "search_discussions"
%>

<%= content_for :sidebar do %>
  <%= render partial: "discussions/sidebar" %>
<% end %>

<h2 class="section">
  Searching discussions for
  <em><%= @search_query %></em>
</h2>

<%= render partial: "search/tips" %>

<% if @exchanges && @exchanges.length > 0 %>
  <%= render(partial: "exchanges/table",
             locals: {
               exchanges: @exchanges,
               pagination_params: { q: @search_query }}) %>
<% else %>
  <p>
    No discussions were found.
  </p>
<% end %>
